{
    "compilerOptions": {
        "lib": ["DOM", "ESNext"],
        "target": "ESNext",
        "noEmit": true,
        "skipLibCheck": true,
        "jsxImportSource": "vue",
        "useDefineForClassFields": true,

        /* modules */
        "module": "ESNext",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,

        /* type checking */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src"]
}
